.home-wrapper
  padding: 1em 30px
  *
    color: rgb(180, 180, 180)
  md-icon:hover
    cursor: pointer
  .header-section
    display: grid 
    grid-template-columns: 5fr 1fr
    .right-row
      display: grid
      grid-template-columns: repeat(4, 1fr)
      color: rgb(180, 180, 180)
      font-size: small
      .notification-menu
        justify-self: right
      .account-menu
        justify-self: center
  .body-section
    display: grid 
    grid-template-columns: 1fr
    margin-top: 8em
    justify-items: center
    .search-row
      display: grid
      grid-template-columns: 0.5fr 1fr
      .logo
        align-self: center
        justify-self: end
        padding-right: 30px
        img 
          width: 44px
          height: 44px
          content: url('../../assets/google.png')
      .search-container
        padding-top: 50px
        width: 450px
    .action-row
      display: grid 
      grid-template-columns: repeat(2, 1fr)
      button.md-button
        text-transform: none
        padding: 0 16px
        background-color: rgb(28, 114, 255)
        color: white
        border-radius: 5px
footer 
  padding 1em 30px
  display: grid !important
  grid-template-columns: 1fr 1fr
  position: absolute
  bottom: 0
  color: rgb(180, 180, 180)
  font-size: small
  .left-row, .right-row
    display: grid 
  .left-row
    grid-template-columns: repeat(3, 0.5fr)
  .right-row
    grid-template-columns: repeat(4, 1fr)