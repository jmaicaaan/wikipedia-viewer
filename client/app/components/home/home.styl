.home-wrapper
  padding: 1em 30px
  *
    color: rgb(180, 180, 180)
  md-icon:hover
    cursor: pointer
  .body-section
    display: grid 
    grid-template-columns: 1fr
    margin-top: 8em
    justify-items: center
    .search-row
      display: grid
      grid-template-columns: 0.5fr 1fr
      .logo
        align-self: center
        justify-self: end
        padding-right: 30px
        img 
          width: 44px
          height: 44px
          content: url('../../assets/google.png')
      .search-container
        padding-top: 50px
        width: 450px
    .action-row
      display: grid 
      grid-template-columns: repeat(2, 1fr)
      button.md-button
        text-transform: none
        padding: 0 16px
        background-color: rgb(28, 114, 255)
        color: white
        border-radius: 5px